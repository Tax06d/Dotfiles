set window-title-basename "true"
set selection-clipboard "clipboard"

#
# Color theme
#

set notification-error-bg       "#bf616a" # Red
set notification-error-fg       "#ADADAD" # Foreground
set notification-warning-bg     "#cb4b16" # Orange
set notification-warning-fg     "#4c566a" # Selection
set notification-bg             "#0c141c" # Background
set notification-fg             "#ADADAD" # Foreground

set completion-bg               "#0c141c" # Background
set completion-fg               "#5e81ac" # Comment
set completion-group-bg         "#0c141c" # Background
set completion-group-fg         "#5e81ac" # Comment
set completion-highlight-bg     "#4c566a" # Selection
set completion-highlight-fg     "#ADADAD" # Foreground

set index-bg                    "#0c141c" # Background
set index-fg                    "#ADADAD" # Foreground
set index-active-bg             "#4c566a" # Current Line
set index-active-fg             "#ADADAD" # Foreground

set inputbar-bg                 "#0c141c" # Background
set inputbar-fg                 "#ADADAD" # Foreground
set statusbar-bg                "#0c141c" # Background
set statusbar-fg                "#ADADAD" # Foreground

set highlight-color             "#cb4b16" # Orange
set highlight-active-color      "#d33682" # Pink

set default-bg                  "#0c141c" # Background
set default-fg                  "#ADADAD" # Foreground

set render-loading              true
set render-loading-fg           "#0c141c" # Background
set render-loading-bg           "#ADADAD" # Foreground

#
# Recolor mode settings
#

set recolor-lightcolor          "#0c141c" # Background
