super + Return
	kitty

super + shift + Return
	alacritty

alt + Return
	 tilix

# program launcher
alt + d
	rofi -show drun -disable-history

super + w
	google-chrome-stable

super + c
	code

super + f
	pcmanfm

super + m
	nitrogen

alt + p
	zathura

alt + r
	kitty -e $HOME/.config/vifm/scripts/vifmrun

@F11
	i3lock -u -t -i /home/tax06d/Lock/1492163.png

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

